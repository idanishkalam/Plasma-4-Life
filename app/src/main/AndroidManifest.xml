<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plasma_4life">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plasma4Life">
        <activity android:name=".HospitalActivity"></activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".RegistrationActivity"
            android:label="Register As"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".DonorActivity"
            android:label="Donor"
            android:parentActivityName=".RegistrationActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>